{
  "private": true,
  "name": "edit-it",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "serve": "sirv build --single",
    "dev": "preact watch",
    "lint": "eslint src --fix",
    "build": "preact build",
    "start": "sirv build --single --host 0.0.0.0 --port $PORT"
  },
  "eslintConfig": {
    "extends": [
      "preact",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-preact": "^1.1.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "prettier": "^2.0.5"
  },
  "dependencies": {
    "preact": "^10.1.0",
    "preact-cli": "^3.0.0-rc.6",
    "preact-render-to-string": "^5.1.2",
    "sirv-cli": "^0.4.5"
  }
}
